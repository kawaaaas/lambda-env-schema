{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "importHelpers": false,
    "noEmitHelpers": true,
    "verbatimModuleSyntax": false
