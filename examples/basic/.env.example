# =============================================================================
# Basic Types
# =============================================================================

# String
API_KEY=your-api-key-here
LOG_LEVEL=info

# Number (auto-coerced from string)
PORT=3000
MAX_CONNECTIONS=100

# Boolean (auto-coerced from string)
DEBUG=true

# Array (auto-split by comma)
ALLOWED_ORIGINS=https://example.com,https://app.example.com

# JSON (auto-parsed)
DATABASE_CONFIG={"host":"localhost","port":5432}

# =============================================================================
# AWS Parsed Types
# =============================================================================

# Validation-only types (return string)
BUCKET_NAME=my-bucket
TABLE_NAME=my-table
AWS_REGION=us-east-1

# Parsed types (return object with properties)
QUEUE_ARN=arn:aws:sqs:us-east-1:123456789012:my-queue
QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/my-queue
TABLE_ARN=arn:aws:dynamodb:us-east-1:123456789012:table/my-table
S3_ARN=arn:aws:s3:::my-bucket/path/to/object.txt
ROLE_ARN=arn:aws:iam::123456789012:role/my-role

# =============================================================================
# AWS Lambda Runtime Environment Variables
# =============================================================================
# These are automatically set by AWS Lambda at runtime
# Uncomment to simulate Lambda environment locally

# AWS_REGION=us-east-1
# AWS_LAMBDA_FUNCTION_NAME=my-lambda-function
# AWS_LAMBDA_FUNCTION_VERSION=$LATEST
# AWS_LAMBDA_FUNCTION_MEMORY_SIZE=512
# AWS_LAMBDA_LOG_GROUP_NAME=/aws/lambda/my-lambda-function
# AWS_LAMBDA_LOG_STREAM_NAME=2024/01/12/[$LATEST]abcdef1234567890

# =============================================================================
# Invalid AWS Parameters (for validation testing)
# =============================================================================
# Uncomment these to test validation errors

# Invalid region (not a valid AWS region code)
# AWS_REGION=invalid-region-123

# Invalid SQS Queue ARN (missing queue name)
# QUEUE_ARN=arn:aws:sqs:us-east-1:123456789012

# Invalid SQS Queue URL (wrong format)
# QUEUE_URL=https://example.com/my-queue

# Invalid DynamoDB Table ARN (wrong service name)
# TABLE_ARN=arn:aws:dynamodb2:us-east-1:123456789012:table/my-table

# Invalid S3 Bucket Name (uppercase not allowed)
# BUCKET_NAME=MyBucket-INVALID

# Invalid S3 ARN (wrong format)
# S3_ARN=arn:aws:s3:us-east-1:123456789012:my-bucket

# Invalid IAM Role ARN (missing role name)
# ROLE_ARN=arn:aws:iam::123456789012:role/

# Invalid DynamoDB Table Name (contains invalid characters)
# TABLE_NAME=my-table-with-@-invalid-char

# Invalid Lambda Function Memory Size (not a number)
# AWS_LAMBDA_FUNCTION_MEMORY_SIZE=not-a-number

